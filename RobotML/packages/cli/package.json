{
    "name": "robot-ml-cli",
    "description": "The cli specific package",
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": ">=20.10.0",
        "npm": ">=10.2.3"
    },
    "files": [
        "bin",
        "src"
    ],
    "bin": {
        "robot-ml-cli": "./bin/cli.js"
    },
    
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out",
        "build": "bun build ./src/ast.ts --compile --outfile=./bin/cli --external langium --external chalk --external commander",
        "test": "bun ./src/ast.ts",
        "build:clean": "npm run clean && npm run build"
    },
    "devDependencies": {
        "robot-ml-language": "*",
        "chalk": "~5.6.2",
        "commander": "~14.0.2"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    }
}
