{
    "name": "robot-ml-language",
    "description": "The language specific package",
    "version": "0.0.1",
    "type": "module",

    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/src/index.d.ts", 
    "exports": {
        ".": {
        "types": "./dist/src/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs" 
        }
    },
    "license": "MIT",
    "devDependencies": {
        "langium-cli": "^4.2.0",
        "langium": "^4.2.0",
        "langium-visitor": "^1.4.4",
        "vitest": "*",
        "rolldown-plugin-dts": "*",
        "rolldown": "*",
        "typescript": "^5.9.3"
    },
    "scripts": {
        "build": "langium generate && langium-visitor && rolldown -c rolldown.config.ts && tsc --emitDeclarationOnly --declaration",
        "clean": "shx rm -fr *.tsbuildinfo dist src/generated src/semantics",
        "test": "vitest run"
    }
}