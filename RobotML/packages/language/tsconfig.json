{
	"compilerOptions": {
		"alwaysStrict": false,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"composite": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "src/index.ts"]
}
