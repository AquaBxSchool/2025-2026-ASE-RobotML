{
    "name": "vscode-RobotML",
    "description": "The extension specific package",
    "version": "0.0.1",
    "displayName": "RobotML",
    "type": "module",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "robot-ml",
            "aliases": ["RobotML", "robot-ml"],
            "extensions": [".robot"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "robot-ml",
            "scopeName": "source.robot-ml",
            "path": "syntaxes/robot-ml.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:robot-ml"
    ],
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "npm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/robot-ml.tmLanguage.json ./syntaxes/robot-ml.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\""
    },
    "dependencies": {
        "robot-ml-language": "0.0.1",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.106.1",
        "concurrently": "^9.2.1",
        "esbuild": "^0.27.1"
    },
    "vsce": {
      "dependencies": false
    }
}
