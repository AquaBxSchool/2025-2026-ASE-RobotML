{
	"name": "robot-ml-vscode",
	"description": "The extension specific package",
	"version": "0.0.1",
	"displayName": "RobotML",
	"type": "module",
	"repository": "https://github.com/AquaBxSchool/2025-2026-ASE-RobotML.git",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Programming Languages"
	],
	"contributes": {
		"languages": [
			{
				"id": "robot-ml",
				"aliases": [
					"RobotML",
					"robot-ml"
				],
				"extensions": [
					".robot"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "robot-ml",
				"scopeName": "source.robot-ml",
				"path": "syntaxes/robot-ml.tmLanguage.json"
			}
		]
	},
	"main": "./out/extension.cjs",
	"scripts": {
		"clean": "shx rm -fr *.tsbuildinfo out syntaxes",
		"prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/dist/robot-ml.tmLanguage.json ./syntaxes",
		"compile": "rolldown -c rolldown.config.ts --minify",
		"package": "vsce package --yarn --ignoreFile .vscodeignore -o out/ext.vsix",
		"build": "yarn prepare && yarn compile && yarn package",
		"test": "echo Nothing to do",
		"mutation": "echo Nothing to do"
	},
	"devDependencies": {
		"robot-ml-language": "*",
		"@types/node": "*",
		"rolldown": "*",
		"@types/vscode": "^1.104.0",
		"vscode-languageclient": "~9.0.1",
		"vscode-languageserver": "~9.0.1",
		"@vscode/vsce": "^3.7.1"
	},
	"vsce": {
		"dependencies": false
	}
}
