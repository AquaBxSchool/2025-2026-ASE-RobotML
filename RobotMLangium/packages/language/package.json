{
	"name": "robot-ml-language",
	"description": "The language specific package",
	"version": "0.0.1",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/src/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./generated": {
			"types": "./dist/src/generated.d.ts",
			"import": "./dist/generated.js"
		},
		"./semantics": {
			"types": "./dist/src/semantics.d.ts",
			"import": "./dist/semantics.js"
		}
	},
	"license": "MIT",
	"devDependencies": {
		"langium-cli": "^4.2.0",
		"langium": "^4.2.0",
		"@aquabx/langium-visitor": "^1.4.5",
		"vitest": "*",
		"rolldown-plugin-dts": "*",
		"rolldown": "*",
		"@stryker-mutator/core": "^9.4.0",
		"@stryker-mutator/vitest-runner": "^9.4.0",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"build": "langium generate && langium-visitor && rolldown -c rolldown.config.ts && tsc --emitDeclarationOnly --declaration",
		"clean": "shx rm -fr *.tsbuildinfo dist src/generated src/semantics",
		"test": "vitest run",
		"mutation":"stryker run"
	}
}
